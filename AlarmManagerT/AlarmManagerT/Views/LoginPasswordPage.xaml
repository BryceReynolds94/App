<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlarmManagerT.ViewModels.LoginPasswordPage"
             xmlns:resources="clr-namespace:AlarmManagerT.Resources"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Padding="10" IsVisible="True" VerticalOptions="CenterAndExpand">
            <StackLayout VerticalOptions="Center">
                <Label Text="{x:Static resources:AppResources.LoginPasswordPage_Prompt}" HorizontalOptions="Center" HorizontalTextAlignment="Center"  Margin="30,0"/>
                <Entry Text="{Binding Password}" 
                       Placeholder="{x:Static resources:AppResources.LoginPasswordPage_Password_Placeholder}" 
                       Keyboard="Default" 
                       Margin="30,0" 
                       ReturnCommand="{Binding Return}" 
                       IsPassword="True" 
                       ClearButtonVisibility="WhileEditing"/>
                <Label Text="{Binding ErrorText}" IsVisible="{Binding ErrorActive}" BackgroundColor="{StaticResource WarningColor}" TextColor="White" Padding="10" Margin="30,0"/>
            </StackLayout>
            <Button Text="{x:Static resources:AppResources.LoginPasswordPage_NextBtn}" HorizontalOptions="Center" Command="{Binding Next}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>